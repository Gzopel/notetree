{
  "name": "notetree",
  "displayName": "notetree",
  "description": "Note taking in VSCode",
  "version": "0.0.1",
  "publisher": "jeremyoverman",
  "engines": {
    "vscode": "^1.23.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": [
      {
        "title": "NoteTree configuration settings",
        "properties": {
          "notetree.provider": {
            "type": "string",
            "enum": [
              "evernote"
            ]
          },
          "notetree.evernote.apiKey": {
            "type": "string"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "notetree.openNote",
        "title": "Open Note"
      },
      {
        "command": "notetree.renameNote",
        "title": "Rename Note"
      },
      {
        "command": "notetree.deleteNote",
        "title": "Delete Note"
      },
      {
        "command": "notetree.newNote",
        "title": "New Note"
      },
      {
        "command": "notetree.newNotebook",
        "title": "New Notebook"
      },
      {
        "command": "notetree.refresh",
        "title": "Refresh Notes"
      },
      {
        "command": "notetree.search",
        "title": "Search Notes"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "notes",
          "title": "Notes",
          "icon": "./icon.svg"
        }
      ]
    },
    "views": {
      "notes": [
        {
          "id": "notes",
          "name": "Notes"
        },
        {
          "id": "package-outline",
          "name": "File Explorer"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "notetree.renameNote",
          "when": "viewItem == notetree.note"
        },
        {
          "command": "notetree.deleteNote",
          "when": "viewItem == notetree.note"
        },
        {
          "command": "notetree.newNote",
          "when": "viewItem == notetree.notebook"
        }
      ],
      "view/title": [
        {
          "command": "notetree.refresh",
          "when": "view == notes"
        },
        {
          "command": "notetree.search",
          "when": "view == notes"
        },
        {
          "command": "notetree.newNotebook",
          "when": "view == notes"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/marked": "^0.3.0",
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.43",
    "@types/sqlite3": "^3.1.3",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "vscode": "^1.1.6"
  },
  "dependencies": {
    "@types/text-encoding": "0.0.32",
    "@types/thrift": "^0.10.7",
    "evernote": "^2.0.5",
    "marked": "^0.4.0",
    "sqlite3": "^4.0.0",
    "text-encoding": "^0.6.4",
    "turndown": "^4.0.2"
  }
}
